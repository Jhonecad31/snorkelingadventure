---
import { getI18N } from "@/i18n";
import { Check } from "@/icons/allIcons";
import { getLangFromUrl, useTranslatedPath } from "@/i18n/utils";
import BaseLayout from "@/layouts/BaseLayout.astro";
import TagH1 from "@/components/global/TagH1.astro";
import TagP from "@/components/global/TagP.astro";
import BtnLinkCustom from "@/components/extras/BtnLinkCustom";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const seoMetaDatos = {
    title: i18n.THANKS_PAGE.TITLE,
    robots: "noindex, nofollow",
};
---

<BaseLayout seo={seoMetaDatos}>
    <section
        class="container mx-auto flex justify-center text-center my-5 lg:mb-24 lg:mt-10"
    >
        <div class="w-full md:w-3/5 my-20 px-6">
            <Check
                class="at-check-circle size-32 font-bold text-white bg-linear-to-r from-[#a1d62f] from-35% to-[#81bd00] rounded-full p-5 shadow-md mx-auto"
            />
            <TagH1>{i18n.THANKS_PAGE.TITLE}</TagH1>
            <TagP class="!text-center">
                {i18n.THANKS_PAGE.DESCRIPTION.TEXT_2}
            </TagP>
            <div class="mt-10">
                <BtnLinkCustom
                    client:visible
                    text={i18n.ACCESSIBILITY.GO_TO_HOME}
                    url={translatePath("/")}
                />
            </div>
        </div>
    </section>
</BaseLayout>
