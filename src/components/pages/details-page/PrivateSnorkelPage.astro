---
import { getI18N } from "@/i18n";
import { PMAereal, SnorkelMayanReef, User1, User2, User3 } from "@public/img/allImages";
import { FlipFlop, Towel, Cash, Swimwear, PlayerPause, PlayerPlay, Exclamation, Check, Close, Star } from "@/icons/allIcons";
import BaseLayout from "@/layouts/BaseLayout.astro";
import BlockContainer from "@/components/global/BlockContainer.astro";
import MoreActivities from "@/components/sections/MoreActivities.astro";
import TagH1 from "@/components/global/TagH1.astro";
import TagH2 from "@/components/global/TagH2.astro";
import Faqs from "@/components/extras/Faqs";
import BtnModalBokun from "@/components/extras/BtnModalBokun";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const priceFrom = 59;
const countStars = 4.8;
const reviewsCount = "1.2k";
const bookingChannel = "e17819cf-e2f5-4ea6-83ab-c37adaf3faa1";

const dataForm = {
    bookingChannel: bookingChannel,
    title: i18n.DETAIL_PAGE.PRIVATE_SNORKELING.FORM_FLOATER.TITLE,
    btnBook: i18n.DETAIL_PAGE.PRIVATE_SNORKELING.FORM_FLOATER.BUTTON_BOOK,
    btnCloseText: i18n.DETAIL_PAGE.PRIVATE_SNORKELING.FORM_FLOATER.BUTTON_CLOSE
}

const seoMetaData = {
    title: i18n.SEO.DETAIL_PAGE.PRIVATE_SNORKELING.TITLE,
    description: i18n.SEO.DETAIL_PAGE.PRIVATE_SNORKELING.DESCRIPTION,
    metaTitle: i18n.SEO.DETAIL_PAGE.PRIVATE_SNORKELING.META_TITLE,
};
---

<BaseLayout seo={seoMetaData}>
    <!-- Hero -->
    <section class="min-h-120 md:min-h-180 relative overflow-hidden">
        <video
            id="video-hero"
            autoplay
            muted
            loop
            preload="auto"
            class="absolute top-0 left-0 w-full h-full object-cover object-center z-0 brightness-65"
        >
            <source
                src="https://res.cloudinary.com/videosextreme/video/upload/v1766090249/private-snorkeling-experience-video_jjnwtj.mp4"
                type="video/mp4"
            />
        </video>
        <button
            id="btn-video-hero"
            class="absolute bottom-10 right-5 md:right-10 bg-linear-to-br from-sky-700 via-cyan-400 to-sky-500 transition rounded-full p-2 md:p-3 shadow-lg group cursor-pointer"
        >
            <span class="sr-only">{i18n.ACCESSIBILITY.PLAY_PAUSE}</span>
            <PlayerPlay class="size-6 md:size-8 text-white hidden group-hover:scale-110 transition duration-300" />
            <PlayerPause class="size-6 md:size-8 text-white group-hover:scale-110 transition duration-300" />
        </button>
        <script is:inline>
            const videoHero = document.getElementById('video-hero');
            const btnVideoHero = document.getElementById('btn-video-hero');
            const iconPlay = btnVideoHero.querySelector('svg:nth-child(2)');
            const iconPause = btnVideoHero.querySelector('svg:nth-child(3)');

            btnVideoHero.addEventListener('click', () => {
                if (videoHero.paused) {
                    videoHero.play();
                    iconPlay.classList.add('hidden');
                    iconPause.classList.remove('hidden');
                } else {
                    videoHero.pause();
                    iconPlay.classList.remove('hidden');
                    iconPause.classList.add('hidden');
                }
            });
        </script>
        <BlockContainer class="relative !mt-0">
            <div class="py-20 max-w-3xl mx-auto">
                <TagH1 class="text-center text-white text-shadow-lg/10">
                    {i18n.DETAIL_PAGE.PRIVATE_SNORKELING.HERO.TITLE}
                </TagH1>
                <div class="w-fit mx-auto flex flex-wrap items-center justify-center gap-3 p-1.5 pr-4 mt-10 rounded-full border border-slate-300 bg-white/60">
                    <div class="flex items-center -space-x-3">
                        <img
                            class="size-7 rounded-full border-2 border-white"
                            height={50}
                            width={50}
                            src={User1.src}
                            alt=""
                        />
                        <img
                            class="size-7 rounded-full border-2 border-white"
                            height={50}
                            width={50}
                            src={User2.src}
                            alt=""
                        />
                        <img
                            class="size-7 rounded-full border-2 border-white"
                            height={50}
                            width={50}
                            src={User3.src}
                            alt=""
                        />
                    </div>
                    <p class="text-xs">
                        {reviewsCount}
                        {i18n.ACCESSIBILITY.PEOPLE_ENJOYED}
                    </p>
                </div>
            </div>
        </BlockContainer>
    </section>
    <BlockContainer>

    </BlockContainer>
    <!-- Faqs -->
    <BlockContainer>
        <TagH2 class="text-center max-w-2xl mx-auto mb-10 mt-10">
            {i18n.DETAIL_PAGE.PRIVATE_SNORKELING.FAQS.TITLE}
        </TagH2>
        <div class="max-w-4xl mx-auto">
            <Faqs client:visible faqs={i18n.DETAIL_PAGE.PRIVATE_SNORKELING.FAQS.FAQS} />
        </div>  
    </BlockContainer>
    <!-- More Activities -->
    <MoreActivities />
    <!-- Form Bokun -->
    <div class="sticky bottom-5 max-w-4xl mx-auto">
        <div class="flex flex-wrap items-center justify-between gap-2 sm:gap-4 bg-white p-2 md:px-6 md:py-2 rounded-xl border border-zinc-200 shadow mx-4">
            <div class="flex items-center gap-2">
                <div class="flex items-center -space-x-4">
                    <img
                        class="h-18 w-13 sm:size-18 rounded-lg border-3 border-white object-cover shadow -rotate-6"
                        height={50}
                        width={50}
                        src={PMAereal.src}
                        alt=""
                    />
                    <img
                        class="h-18 w-13 sm:size-18 rounded-lg border-3 border-white object-cover shadow rotate-3"
                        height={50}
                        width={50}
                        src={SnorkelMayanReef.src}
                        alt=""
                    />
                </div>
                <div class="pl-3 pt-2">
                    <p class="font-semibold text-xs sm:text-lg w-fit">{i18n.DETAIL_PAGE.PRIVATE_SNORKELING.HERO.TITLE}</p>
                    <div class="flex items-center my-1">
                        <div class="flex items-center gap-1">
                            <Star class="size-4 text-amber-500"/> <span class="text-xs sm:text-sm font-semibold">{countStars}</span>
                        </div>
                        <p class="text-xs sm:text-sm ml-2">({reviewsCount} {i18n.ACCESSIBILITY.REVIEWS})</p>
                    </div>
                    <p class="font-semibold text-xs sm:text-lg"><span class="text-sm">{i18n.ACCESSIBILITY.PRICE_FROM}</span> ${priceFrom.toFixed(2)} USD</p>
                </div>
            </div>
            <BtnModalBokun  
                client:visible
                data={dataForm}
            />
        </div>
    </div>
</BaseLayout>
