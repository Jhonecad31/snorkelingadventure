---
import { getI18N } from "@/i18n";
import BaseLayout from "@/layouts/BaseLayout.astro";
import HeroGradient from "@/components/sections/HeroGradient.astro";
import ExplorePuertoMorelos from "@/components/sections/ExplorePuertoMorelos.astro";
import GridTextsPM from "@/components/sections/GridTextsPM.astro";
import CTASection from "@/components/sections/CTASection.astro";
import FaqsHome from "@/components/sections/FaqsHome.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const seoMetaData = {
    title: i18n.SEO.PUERTO_MORELOS_PAGE.TITLE,
    description: i18n.SEO.PUERTO_MORELOS_PAGE.DESCRIPTION,
    metaTitle: i18n.SEO.PUERTO_MORELOS_PAGE.META_TITLE,
};
---

<BaseLayout seo={seoMetaData}>
    <HeroGradient
        title={i18n.PUERTO_MORELOS_PAGE.HERO.TITLE}
        text={i18n.PUERTO_MORELOS_PAGE.HERO.DESCRIPTION}
    />
    <ExplorePuertoMorelos />
    <GridTextsPM />
    <CTASection />
    <FaqsHome />
</BaseLayout>
