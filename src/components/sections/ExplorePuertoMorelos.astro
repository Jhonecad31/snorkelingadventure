---
import { getI18N } from "@/i18n";
import { MiddleViewSnorkel, SnorkelMayanReef } from "@public/img/allImages";
import BlockContainer from "@/components/global/BlockContainer.astro";
import TagH2 from "@/components/global/TagH2.astro";
import TagH3 from "@/components/global/TagH3.astro";
import TagP from "@/components/global/TagP.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<BlockContainer>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-5">
        <div class="lg:px-10">
            <TagH2>{i18n.PUERTO_MORELOS_PAGE.EXPLORE_PUERTO_MORELOS.TITLE}</TagH2>
            <TagP set:html={i18n.PUERTO_MORELOS_PAGE.EXPLORE_PUERTO_MORELOS.DESCRIPTION} />
            <TagH3 class="mt-8" set:html={i18n.PUERTO_MORELOS_PAGE.RUTA_CENOTES.TITLE} />
            <TagP set:html={i18n.PUERTO_MORELOS_PAGE.RUTA_CENOTES.DESCRIPTION} />
        </div>
        <div class="relative h-80 sm:h-120 xl:h-140 mb-20 sm:mb-28">
            <img
                src={MiddleViewSnorkel.src}
                alt={i18n.ACCESSIBILITY.IMAGES.SWIM_MAYAN_REEF}
                class="absolute top-0 left-0 w-3/4 h-full object-cover z-10 rounded-[30%_70%_70%_30%_/_30%_30%_70%_70%] border-4 border-white shadow-2xl"
            />
            <img
                src={SnorkelMayanReef.src}
                alt={i18n.ACCESSIBILITY.IMAGES.EXPLORE_MAYAN_REEF}
                class="absolute top-32 md:top-52 right-0 w-1/2 h-3/4 object-cover z-10 rounded-[30%_70%_70%_30%_/_30%_30%_70%_70%] border-4 border-white shadow-2xl"
            />
        </div>
    </div>
</BlockContainer>
