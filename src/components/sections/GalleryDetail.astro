---
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import TagH2 from "@/components/global/TagH2.astro";
import TagP from "@/components/global/TagP.astro";

interface Props {
    title: string;
    description: string;
    images: {
        src: string;
    }[];
}

const { title, description, images } = Astro.props;
---

<section>
    <div class="max-w-2xl mx-auto px-5">
        <TagH2 class="text-center">{title}</TagH2>
        <TagP class="md:text-center!">{description}</TagP>
    </div>
    <div class="grid grid-cols-3 lg:grid-cols-4 grid-rows-6 lg:grid-rows-5 gap-2 md:gap-3 max-h-350 md:max-h-600 lg:max-h-300 mt-10">
        <div
            class="rounded-lg col-span-3 lg:col-auto"
            data-fancybox="gallery"
            data-src={images[0].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 1"
                src={images[0].src}
            />
        </div>
        <div
            class="rounded-lg col-span-2 row-start-2 lg:row-start-auto lg:col-auto"
            data-fancybox="gallery"
            data-src={images[1].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 2"
                src={images[1].src}
            />
        </div>
        <div
            class="rounded-lg col-start-3 row-start-2 lg:col-span-2 lg:row-span-2"
            data-fancybox="gallery"
            data-src={images[2].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 3"
                src={images[2].src}
            />
        </div>
        <div
            class="rounded-lg row-start-3 lg:col-span-2 lg:row-span-2 lg:row-start-2"
            data-fancybox="gallery"
            data-src={images[3].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 4"
                src={images[3].src}
            />
        </div>
        <div
            class="rounded-lg col-span-2 lg:col-auto lg:col-start-3 row-start-3"
            data-fancybox="gallery"
            data-src={images[4].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 5"
                src={images[4].src}
            />
        </div>
        <div
            class="rounded-lg col-span-3 lg:col-auto lg:col-start-4 row-start-4 lg:row-start-3"
            data-fancybox="gallery"
            data-src={images[5].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 6"
                src={images[5].src}
            />
        </div>
        <div
            class="rounded-lg col-span-2 lg:col-auto lg:row-span-2 row-start-5 lg:row-start-4"
            data-fancybox="gallery"
            data-src={images[6].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 7"
                src={images[6].src}
            />
        </div>
        <div
            class="rounded-lg col-start-3 lg:col-auto lg:row-span-2 row-start-5 lg:row-start-4"
            data-fancybox="gallery"
            data-src={images[7].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 8"
                src={images[7].src}
            />
        </div>
        <div
            class="rounded-lg col-span-3 lg:col-span-2 lg:row-span-2 row-start-6 lg:row-start-4"
            data-fancybox="gallery"
            data-src={images[8].src}
        >
            <img
                class="rounded-lg w-full h-full object-cover"
                alt="Snorkeling Adventure Image 9"
                src={images[8].src}
            />
        </div>
    </div>
</section>

<script>
    import { Fancybox } from "@fancyapps/ui/dist/fancybox/";
    Fancybox.bind("[data-fancybox]", {});
</script>
