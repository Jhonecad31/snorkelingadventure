---
import { getLangFromUrl } from "@/i18n/utils";
import Head from "@/components/global/Head.astro";
import SchemasSERP from "@/components/global/SchemasSERP.astro";
import Header from "@/components/global/Header.astro";
import Footer from "@/components/global/Footer.astro";

const lang = getLangFromUrl(Astro.url);

const { seo, offI18n } = Astro.props;
---

<!doctype html>
<html lang={lang}>
    <head>
        <Head offI18n={offI18n} {...seo} />
        <SchemasSERP />
        <slot name="schema-jsonld" />
    </head>
    <body id="body">
        <Header offI18n={offI18n} />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
